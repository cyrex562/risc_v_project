{
    "name": "RISC-V Dev Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "buster"
        }
    },
    "extensions": [
        "rust-lang.rust-analyzer",
        "ms-python.python",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "bungcip.better-toml",
        "editorconfig.editorconfig",
        "ms-python.vscode-pylance",
        "samuelcolvin.jinjahtml",
        "ms-python.black-formatter",
        "tamasfe.even-better-toml",
        "github.copilot",
        "github.copilot-chat",
        "ms-python.isort",
        "ms-python.debugpy",
        "rust-lang.rust-analyzer"
    ],
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "forwardPorts": [8080],
    "remoteUser": "vscode"
}
